{
    "name": "rtf",
    "displayName": "RTF",
    "description": "RTF support for Visual Studio Code",
    "version": "2.3.0",
    "publisher": "alefragnani",
    "galleryBanner": {
        "color": "#4682B4",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "RTF",
        "Rich",
        "RichTextFormat"
    ],
    "activationEvents": [
        "onLanguage:rtf",
        "onCommand:rtf.whatsNew"
    ],
    "main": "./dist/extension",
    "icon": "images/icon.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "homepage": "https://github.com/alefragnani/vscode-language-rtf/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/alefragnani/vscode-language-rtf.git"
    },
    "bugs": {
        "url": "https://github.com/alefragnani/vscode-language-rtf/issues"
    },
    "contributes": {
        "languages": [
            {
                "id": "rtf",
                "aliases": [
                    "RTF",
                    "rtf"
                ],
                "extensions": [
                    ".rtf"
                ],
                "configuration": "./rtf.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rtf",
                "scopeName": "rtf.text",
                "path": "./syntaxes/rtf.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "rtf.whatsNew",
                "title": "RTF: What's New"
            }
        ]
    },
    "eslintConfig": {
        "extends": [
            "vscode-ext"
        ]
    },
    "scripts": {
        "build": "webpack --mode development",
        "watch": "webpack --watch --mode development",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "tsc -p ./",
        "lint": "eslint -c package.json --ext .ts src vscode-whats-new",
        "pretest": "npm run compile && npm run lint",
        "test-compile": "tsc -p ./ && npm run webpack",
        "just-test": "node ./out/src/test/runTest.js",
        "test": "npm run test-compile && npm run just-test"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^14.17.27",
        "@types/semver": "^7.3.9",
        "@types/vscode": "^1.61.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^8.1.0",
        "eslint-config-vscode-ext": "^1.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "terser-webpack-plugin": "^5.2.4",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.4",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    }
}
